<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/create_account_page_toolbar"
        style="@style/ToolbarTheme"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Create An Account"
        app:titleTextColor="@color/textColorBlack" />

    <Button
        android:id="@+id/create_account_page_continue_button"
        style="@style/Widget.Thecaloriewizard.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="@string/continue_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_account_page_welcome_text" />

    <TextView
        android:id="@+id/create_account_page_welcome_text"
        android:layout_width="318dp"
        android:layout_height="77dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="@string/hey_let_s_create_your_account_and_customise_thecaloriewizard_to_your_goals"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_account_page_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>